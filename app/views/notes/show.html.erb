<h1><%= @note.name %></h2>
<!-- Note <%= @note.id %> -->
<a name="@note-<%= @note.id %>"></a>

<!-- Title -->
<h2><%= @note.created_at.to_formatted_s(:iasa) %></h2>

<% if @note.tags.count > 0 %><h3><strong>Tags:</strong> <% for tag in @note.tags %>
<%= link_to tag.name, tags_url(:name => tag.name), {:title => "Links to "+ tag.name + " Archive", :class => 'tags'} %>
<%end%></h3><%end%>

<% if @note.image -%>
<!-- Image --> 
<%= image_tag(@note.image.url(:wide), :class => '@notes-img') %>
<% end %>

<!-- Summary --> 
<%=
r = RedCloth.new(@note.summary)
r.to_html
%>

<% if @note.additional != '' -%>
<!-- Additional Data --> 
<div class="additional">
<%= @note.additional %>
</div>
<% end %>


<% if @note.body != '' -%>
<!-- Summary --> 
<%=
r = RedCloth.new(@note.body)
r.to_html
%>
<% end %>
