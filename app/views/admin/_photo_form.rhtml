<%= error_messages_for 'photo' %>
<div class="form-box">
<!--[form:photo]-->
<%= hidden_field 'photo', 'exhibition_id', :value => @exhibition[:id] %>
<p>
<%= file_column_field("photo", "image") %>
</p>

