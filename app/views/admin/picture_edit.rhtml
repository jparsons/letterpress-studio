<%= error_messages_for 'picture' %>

<h1>Editing Image</h1>
<div class="form-box">
<%= form_tag({:action => 'picture_update', :id => @picture}, :multipart => true, :id => 'picture_form') %>
  <%= render :partial => 'picture_edit_form' %>
  <%= submit_tag 'Edit' %>

<%= end_form_tag %>
</div>
<p>
<%= link_to 'Back', :action => 'picture_list' %>
</p>