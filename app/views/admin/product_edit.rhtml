<%= error_messages_for 'product' %>

<h1>Editing "<%= @product.name %>"</h1>
<div class="form-box">
<%= form_tag({:action => 'product_update', :id => @product}, :multipart => true, :id => 'product_form') %>
  <%= render :partial => 'product_form' %>
  <%= submit_tag 'Edit' %>

<%= end_form_tag %>
</div>
<p>
<%= link_to 'Back', :action => 'product_list' %>
</p>