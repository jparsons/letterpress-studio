<%= error_messages_for 'static' %>

<!--[form:static]-->
<p><label for="static_name"><strong>Name</strong></label><br/>
<%= f.text_field 'name' %></p>

<p><label for="static_summary"><strong>Summary</strong></label><br/>
<%= f.text_area 'summary', :cols => "60", :rows => "5" %></p>

<p><label for="static_body"><strong>Longer Description</strong></label><br/>
<%= f.text_area 'body', :cols => "60", :rows => "15" %></p>

<% if @static.icons.count > 0 %>
<div class="tiny-images">
<p><strong><%= link_to 'Imagery', :controller => 'admin', :action => 'icon_list' %></strong> / <%= link_to 'Sort', :controller => 'admin', :action => 'static_icon_sort', :id => @static %> / <%= link_to 'Add', new_static_icon_url(@static) %></p>
<% @static.icons.each do |icon| %>
<%= link_to image_tag(icon.image.url(:tiny)), edit_static_icon_path(@static, icon)  %>
<% end %>
<p>
</div>
<% end %>