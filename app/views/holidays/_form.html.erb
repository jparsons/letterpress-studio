<script type="text/javascript">
  $(function() {
    $("#holiday_date").datepicker();
  });
</script>


<% form_for(@holiday) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :date %><br />
    <%= f.text_field :date %>
  </p>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>  
  <p>
    <%= f.label :note %><br />
    <%= f.text_area :note %>
  </p>

  <p>
    <%= f.submit 'save' %>
  </p>
<% end %>