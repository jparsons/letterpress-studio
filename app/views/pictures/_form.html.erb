<%= error_messages_for 'picture' %>
<div class="form-box">
<!--[form:picture]-->
<% if !@picture.new_record? && @picture.image %>
<p>Current image</p>
<p><%= image_tag(@picture.image.url(:thumb)) %></p>
<% end %>
<p>
<%= f.file_field  :image %>
</p>

<p><label for="picture_name"><strong>Name</strong></label><br/>
<%= f.text_field :name  %></p>

<p><label for="picture_summary"><strong>Description</strong></label><br/>
<%= f.text_area  'summary', :cols => "60", :rows => "10"  %></p>
<!--[eoform:picture]-->
</div>