<%= error_messages_for 'photo' %>
<div class="form-box">
<!--[form:photo]-->
<% if !@photo.new_record? && @photo.image %>
<p>Current image</p>
<p><%= image_tag(@photo.image.url(:thumb)) %></p>
<% end %>
<p>
<%= f.file_field  :image %>
</p>

<p><label for="photo_name"><strong>Name</strong></label><br/>
<%= f.text_field :name  %></p>

<p><label for="photo_summary"><strong>Description</strong></label><br/>
<%= f.text_area  'summary', :cols => "60", :rows => "10"  %></p>
<!--[eoform:photo]-->
</div>