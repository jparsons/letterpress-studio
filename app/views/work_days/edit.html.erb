<h1>Editing work_day</h1>

<% form_for(@work_day) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :start_hour %><br />
    <%= f.text_field :start_hour %>
  </p>
  <p>
    <%= f.label :end_hour %><br />
    <%= f.text_field :end_hour %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @work_day %> |
<%= link_to 'Back', work_days_path %>